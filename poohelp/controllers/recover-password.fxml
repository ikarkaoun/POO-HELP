<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Reflection?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="TOP_CENTER" prefHeight="320.0" prefWidth="430.0" xmlns="http://javafx.com/javafx/11" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label alignment="TOP_CENTER" contentDisplay="CENTER" text="Récupérer mon mot de passe" textAlignment="CENTER">
         <font>
            <Font name="Ubuntu Bold" size="26.0" />
         </font>
         <effect>
            <Reflection />
         </effect>
         <VBox.margin>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
         </VBox.margin>
      </Label>
      <HBox prefHeight="63.0" prefWidth="600.0" />
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="500.0">
         <children>
            <Label alignment="CENTER" text="Nom d'utilisateur:" />
            <TextField fx:id="tfUsername" prefHeight="30.0" prefWidth="250.0" promptText="Nom d'utilisateur">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <HBox alignment="CENTER" prefHeight="60.0" prefWidth="500.0">
         <children>
            <Label text="Email:">
               <HBox.margin>
                  <Insets right="75.0" />
               </HBox.margin>
            </Label>
            <TextField fx:id="tfEmail" prefHeight="30.0" prefWidth="250.0" promptText="Email">
               <HBox.margin>
                  <Insets left="10.0" />
               </HBox.margin>
            </TextField>
         </children>
      </HBox>
      <VBox alignment="CENTER">
         <children>
            <HBox alignment="TOP_RIGHT" prefHeight="0.0" prefWidth="380.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" />
               </VBox.margin>
            </HBox>
            <Button mnemonicParsing="false" onAction="#recoverPassword" prefHeight="24.0" prefWidth="229.0" text="Récupérer mon mot de passe" />
            <HBox alignment="CENTER">
               <VBox.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</VBox>
